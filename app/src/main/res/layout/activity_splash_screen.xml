<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SplashScreenActivity"
    android:background="#EF5455">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_pas_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:text="LocRide Store"
            android:textAlignment="center"
            android:textColor="#FAD744 "
            android:textSize="45sp" />

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="A clothing store that sells local pride brands only!"-->
            <!--android:textAlignment="center"-->
            <!--android:fontFamily="monospace"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="#2b3252  "-->
            <!--android:textSize="15sp" />-->

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_marginTop="90dp"
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="visible"
            app:indicatorColor="#243665"
            app:indicatorName="BallClipRotatePulseIndicator" />

    </LinearLayout>

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="monospace"
        android:text="Copyright 2019 Uchidd. All right reserved"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textColor="#8BD8BD"/>

</RelativeLayout>