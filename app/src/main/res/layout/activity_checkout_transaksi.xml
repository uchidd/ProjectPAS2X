        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#e4ede8"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/order" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laptop ASUS X453MA"
                    android:textColor="#000"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tvDetail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 3.800.000.00-."
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvDetail3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Deskripsi Produk: RAM 4GB, Screen 1366x768 Pixel, Hardisk 500GB,  Intel Core i3"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
