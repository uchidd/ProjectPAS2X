                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=": WhatsApp / Admin +6281382087716"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="129dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:src="@drawable/cart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="Total Biaya Bayar"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="29sp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#e4ede8"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/tvCheckout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="Rp. 52.650.000.00-."
            android:textAlignment="center"
            android:textSize="29sp" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnProses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:background="#5ce3a4"
        android:text="Simpan Data Transaksi"
        android:textColor="#fff"
        android:textSize="29sp" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:background="#426c59"
        android:text="Kembali Ke List"
        android:textColor="#fff"
        android:textSize="29sp" />

